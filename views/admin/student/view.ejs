<%- include('../header.ejs') %> <%- include('../sidebar.ejs') %>
<style>
  p {
    font-size: 18px;
    /* font-weight: bold; */
    /* text-transform: uppercase; */
  }
  b {
    text-transform: uppercase;
  }
</style>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6"></div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Dashboard</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- Main content -->
  <div
    class="content"
    style="border: 2px solid green; padding: 20px; margin: 0 10px"
  >
    <div class="container-fluid" style="padding: 0 70px">
      <center>
        <img
          src="/image//jiwlogo.jpg"
          alt=""
          class="text-center"
          style="height: 100px; width: 100px; border-radius: 100px"
        />
        <h1 class="text-center mt-2 text-danger" style="font-weight: 600">
          Jiwaji University, Gwalior
        </h1>
        <br />
        <hr style="background-color: black; height: 2px" />
      </center>
      <div class="row">
        <div class="col-md-6">
          <br /><br />
          <p>ID: <%= d._id %></p>
          <p>Roll Number: <b><%= d.rollno %></b></p>
          <p>Semester: <b><%= d.semester%> </b></p>
        </div>
        <div class="col-md-6" style="display: flex; justify-content: flex-end">
          <center>
            <img
              src="<%= d.image.url %>"
              alt=""
              style="height: 150px; width: 130px; border: 2px solid black"
              class="card"
            />
          </center>
        </div>
      </div>
      <!-- row 1 ends -->
      <div class="row mt-3">
        <div class="col-md-6">
          <p>Name: <b><%= d.name %></b></p>
        </div>
        <div class="col-md-6" style="display: flex; justify-content: flex-end">
          <p>Father Name: <b><%= d.Fname %></b></p>
        </div>
      </div>
      <!-- row 2 ends -->
      <div class="row">
        <div class="col-md-6">
          <p>Mother Name: <b><%= d.Mname %></b></p>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>Gender: <b><%= d.gender %></b></p>
            </div>
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>DOB: <b><%= d.dob %></b></p>
            </div>
          </div>
        </div>
      </div>
      <!-- row 3 ends -->
      <div class="row">
        <div class="col-md-6">
          <p>Email: <b><%= d.email%></b></p>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>Phone: <b><%= d.mobile %></b></p>
            </div>
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>Category: <b><%= d.category%></b></p>
            </div>
          </div>
        </div>
      </div>
      <!-- row 4 ends -->
      <div class="row">
        <div class="col-md-6">
          <p>Address: <b><%= d.address%></b></p>
        </div>
        <div class="col-md-6">
          <div class="row">
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>Education: <b><%= d.education %></b></p>
            </div>
            <div
              class="col-md-6"
              style="display: flex; justify-content: flex-end"
            >
              <p>Course: <b><%= d.course%></b></p>
            </div>
          </div>
        </div>
      </div>
      <!-- row 5 ends -->
    </div>
  </div>
  <div class="container mt-4">
    <div class="row">
      <div class="col-md-6" style="display: flex; justify-content: center;">
        <a href="/admin/studentDisplay" class="btn btn-info btn-lg mb-4">Back to Display</a>
      
      </div>
      <div class="col-md-6" style="display: flex; justify-content: center;">
        <button class="btn btn-success btn-lg mb-4" onclick="window.print()">Print</button>
      </div>
    </div>
  </div>
</div>
<!-- content wrapper -->

<%- include('../footer.ejs') %>
