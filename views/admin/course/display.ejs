<%- include("../header.ejs") %>
<%- include("../sidebar.ejs") %>
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Course Display</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
            <li class="breadcrumb-item active">Course Display</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row ends -->
       <div class="row">
        <div class="col-md-12">
          <button type="button" class="btn btn-info btn-lg mb-4 mt-4" data-toggle="modal" data-target="#modal-default" >
            Course Insert
          </button>
          <div class="card">
           
            <!-- /.card-header -->
            <div class="card-body">
              <table id="example1" class="table table-bordered table-striped">
                <thead>
                  <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% d.forEach((item)=>{ %>
                  <tr>
                    <td><%= item.id %></td>
                    <td><%= item.name %></td>
        
                    <td>
                      <a href="/admin/course/View/<%= item.id %>" class="btn btn-info">
                        View</a
                      >
                      <a href="/admin/course/Edit/<%= item.id %>" class="btn btn-info"
                        >Edit</a
                      >
                      <a href="/admin/course/Delete/<%= item.id %>" class="btn btn-info"
                        >Delete</a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
        </div>
       </div>
       <!-- row 2 ends -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->
  <!-- </div> -->
  
  <!-- /.card -->
</div>

<div class="modal fade" id="modal-default">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h4 class="modal-title">course</h4>
        <button
          type="button"
          class="close"
          data-dismiss="modal"
          aria-label="Close"
        >
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <form
          action="/admin/courseInsert"
          method="post"
          enctype="multipart/form-data"
        >
          <div class="mb-3">
            <label for="">Course Name</label>
            <input type="text" name="name" class="form-control" value="" />
            <label for="">Email</label>
            <input type="email" name="email" class="form-control" />

            <center>
              <button
                class="btn btn-info"
                type="submit"
                style="margin-top: 25px"
              >
                Submit
              </button>
            </center>
          </div>
        </form>
      </div>
    </div>
    <!-- /.modal-content -->
  </div>
  <!-- /.modal-dialog -->
</div>
<!-- /.modal -->

